{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../../dist/main",
    "rootDir": "..",
    "baseUrl": "../../",
    "types": ["node", "electron"],
    "paths": {
      "@/*": ["src/*"],
      "@/main/*": ["src/main/*"],
      "@/renderer/*": ["src/renderer/*"],
      "@/shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../renderer/**/*"
  ]
}
