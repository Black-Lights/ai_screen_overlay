{
  "name": "ai-screen-overlay",
  "version": "1.0.0",
  "description": "AI-powered screen capture and chat overlay with multi-LLM support",
  "main": "dist/main/main/main.js",
  "author": "AI Screen Overlay Team",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "webpack serve --mode development",
    "dev:electron": "wait-on http://localhost:3000 && NODE_ENV=development electron dist/main/main/main.js",
    "build": "npm run build:electron && npm run build:react",
    "build:react": "webpack --mode production",
    "build:electron": "tsc -p src/main/tsconfig.json && tsc src/main/preload.ts --outDir dist/main --target ES2020 --module CommonJS --esModuleInterop --allowSyntheticDefaultImports",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder --publish=never --win --mac --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac", 
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:portable": "npm run build && electron-builder --win portable --mac dmg --linux AppImage",
    "clean": "rm -rf dist build node_modules/.cache",
    "start": "npm run build && electron dist/main/main/main.js",
    "package": "npm run build && electron-builder --publish=never",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^7.3.4",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.6.1",
    "electron-is-dev": "^2.0.0",
    "electron-screenshot": "^1.0.5",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-highlight": "^7.0.2",
    "screenshot-desktop": "^1.15.0"
  },
  "build": {
    "appId": "com.aioverlay.app",
    "productName": "AI Screen Overlay",
    "copyright": "Copyright Â© 2025 AI Screen Overlay Team",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!node_modules",
      "!src",
      "!docs",
      "!.git"
    ],
    "extraResources": [
      {
        "from": ".env.example",
        "to": ".env.example"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "AI Screen Overlay Team"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "desktop": {
        "Name": "AI Screen Overlay",
        "Comment": "AI-powered screen capture and chat overlay",
        "Categories": "Utility;Graphics;Office;",
        "Keywords": "AI;Screenshot;Chat;Overlay;Assistant;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Screen Overlay",
      "include": "build/installer.nsh"
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "snap": {
      "summary": "AI-powered screen capture and chat overlay with multi-LLM support",
      "description": "Modern desktop application for AI-powered screen analysis with support for multiple language models including GPT-4, Claude, and DeepSeek.",
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "default",
        "desktop",
        "desktop-legacy",
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "pulseaudio",
        "opengl"
      ]
    }
  }
}
